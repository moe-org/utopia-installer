<Window x:Class="UtopiaInstaller.DownloadNewGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UtopiaInstaller"
        mc:Ignorable="d"
        Title="DownloadNewGame" Height="500" Width="830" MinHeight="500" MinWidth="830">
    <Grid>
        <ListBox x:Name="GameVersionList" HorizontalAlignment="Left" Height="465" Margin="10,0,0,0" VerticalAlignment="Center" Width="294" SelectionChanged="GameVersionList_SelectionChanged"/>
        <Button x:Name="FlushVersionBtn" FontSize="16" Content="刷新" HorizontalAlignment="Left" Height="81" Margin="309,10,0,0" VerticalAlignment="Top" Width="162" Click="FlushVersionBtn_Click"/>
        <Label x:Name="GameVersionInfo" FontSize="16" Content="" HorizontalAlignment="Left" Height="68" Margin="309,96,0,0" VerticalAlignment="Top" Width="511"/>
        <Button x:Name="DownloadBtn" Content="下载" FontSize="16" HorizontalAlignment="Left" Height="81" Margin="476,10,0,0" VerticalAlignment="Top" Width="153" Click="DownloadBtn_Click"/>
        <ProgressBar x:Name="DownloadProgress" HorizontalAlignment="Left" Height="19" Margin="309,169,0,0" VerticalAlignment="Top" Width="511"/>


    </Grid>
</Window>
